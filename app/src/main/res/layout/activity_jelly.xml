<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    android:padding="10dp">

    <com.example.qq.mycoordinatordemo.view.ActionMenu
        android:id="@+id/actionMenuTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:circleRadius="25dp"
        app:dimens="10dp"
        app:animationDuration="3000"
        app:expandDirect="expandDirectRight"
        app:buttonNormalColor="@color/primary"
        app:buttonPressColor="@color/primary"
        app:actionMenuIcon="@drawable/add"
        app:actionMenuOnIcon="@drawable/close">
    </com.example.qq.mycoordinatordemo.view.ActionMenu>
    <com.example.qq.mycoordinatordemo.view.ActionMenu
        android:id="@+id/actionMenuBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        app:circleRadius="25dp"
        app:dimens="10dp"
        app:animationDuration="3000"
        app:expandDirect="expandDirectTop"
        app:buttonNormalColor="@color/colorPrimaryOne"
        app:buttonPressColor="@color/colorPrimaryOne"
        app:actionMenuIcon="@drawable/add"
        app:actionMenuOnIcon="@drawable/close">
    </com.example.qq.mycoordinatordemo.view.ActionMenu>
    <com.example.qq.mycoordinatordemo.view.ActionMenu
        android:id="@+id/actionMenuMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:circleRadius="25dp"
        app:dimens="10dp"
        app:animationDuration="3000"
        app:expandDirect="expandDirectDown"
        app:buttonNormalColor="@android:color/holo_green_light"
        app:buttonPressColor="@android:color/holo_green_dark"
        app:actionMenuIcon="@drawable/add"
        app:actionMenuOnIcon="@drawable/close">
    </com.example.qq.mycoordinatordemo.view.ActionMenu>
    <com.example.qq.mycoordinatordemo.view.ActionMenu
        android:id="@+id/actionMenuLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        app:circleRadius="25dp"
        app:dimens="10dp"
        app:animationDuration="3000"
        app:expandDirect="expandDirectLeft"
        app:buttonNormalColor="@color/black"
        app:buttonPressColor="@color/colorAccent"
        app:actionMenuIcon="@drawable/add"
        app:actionMenuOnIcon="@drawable/close">
    </com.example.qq.mycoordinatordemo.view.ActionMenu>
</RelativeLayout>
